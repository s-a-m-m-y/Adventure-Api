<p id="notice"><%= notice %></p>

<p>
  <strong>Text:</strong>
  <%= @adventure.text %>
</p>

<p>
<% if @adventure_options.size > 0 %>
<table>
  <thead>
    <tr>
      <th>Option text</th>
      <th>Adventure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventure_options.each do |adventure_option| %>
      <tr>
        <td><%= adventure_option.option_text %></td>
        <td><%= adventure_option.adventure_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<% if @adventure_options.size < 1 %>
  No adventure option
<% end %>

<p>
  <%= link_to 'Random Adventure', { :controller => :adventures, :action => :random } %>
</p>
